pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include bullets.lua
function _init()
  last_ts = time()
  emitter = new_emitter()
end

function _update60()
  -- __update()
  local now = time()
  local dt = now - last_ts
  emitter:update(dt)

  if (btnp(0)) then
    emitter.cooldown += 0.1
  elseif(btnp(1)) then
    emitter.cooldown -= 0.1
  elseif(btnp(2)) then
    emitter.bullcount += 1
  elseif(btnp(3)) then
    emitter.bullcount -= 1
  end
end

function _draw()
  -- __draw()
  cls()
  -- print("Hello World", 64, 64, 12)
  emitter:draw()
end

