pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include vector2.lua
#include bcirc.lua 
#include collision.lua
#include player.lua

function _init()
  hero = player(bcirc(v2(0,0),2))
  bullets = {
    bcirc(v2(0,4),2),
    bcirc(v2(3,3),3),
    bcirc(v2(0,0),1),
  }
end

function _update()
  local collisions = collision(hero.bounds, bullets)
  for c in all(collisions) do
    --print(c)
  end

  hero:update()
end

function _draw()
  rectfill(0,0,127,127,0)
  hero:draw()
end
